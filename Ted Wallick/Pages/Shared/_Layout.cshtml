<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ted_Wallick</title>

    <environment include="Development">
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
        <link rel="stylesheet" href="~/lib/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />


    </environment>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <style>

        .bg-company-color {
            background-color: tan;
        }

        .nav-item {
            color: black;
        }
    </style>
</head>
<body id="top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-company-color" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#top">Ted Wallick</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle Navigation">Menu <i class="fa fa-bars"></i></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Sub-Link 1</a>
                            <a class="dropdown-item" href="#">Sub-Link 2</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Sub-Link 3</a>
                        </div>
                    </li>

                    <li class="nav-item"><a asp-page="/Index" class="btn nav-link js-scroll-trigger">Home</a></li>
                    <li class="nav-item"><a asp-page="/About" class="btn nav-link js-scroll-trigger">About</a></li>
                    <li class="nav-item"><a asp-page="/Contact" class="btn nav-link js-scroll-trigger">Contact</a></li>


                    <form class="form-inline my-2 my-lg-0 mr">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-default my-2 my-sm-0">Search</button>
                    </form>

                </ul>
                <partial name="_LoginPartial" />

            </div>
            
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - Ted Wallick</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/js/jquery-3.3.1.js"></script>
        <script src="~/lib/js/bootstrap.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="~/lib/js/jquery-3.3.1.min.js"></script>
        <script src="~/lib/js/bootstrap.bundle.min.js"></script>
        <script src="js/navbar-shrinker.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
